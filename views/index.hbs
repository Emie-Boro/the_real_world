<div class="container">
    <h1 style="color:whitesmoke; font-weight:bolder" class="text-center my-5">The Real World</h1>
    <form action="/" method="post" class="m-3 row g-3">
        <div class="col-md-6">
            <label for="name" class="form-label">Full name</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="address" class="form-label">Address</label>
            <input type="text" name="address" id="address" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" id="country" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="occupation" class="form-label">Occupation</label>
            <input type="text" name="occupation" id="occupation" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="bank" class="form-label">Bank Name</label>
            <input type="text" name="bank" id="bank" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="account" class="form-label">Bank Account Number</label>
            <input type="number" name="account" id="account" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="number" class="form-label">ID Number</label>
            <input type="number" name="IdNumber" id="Idnumber" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="sex" class="form-label">Sex</label>
            <select name="sex" id="sex" class="form-select">
                <option value="male" selected>Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="age" class="form-label">Age</label>
            <input type="text" name="age" id="age" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="formal-occupation" class="form-label">Formal Occupation</label>
            <input type="text" name="formalOccupation" id="formal-occupation" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="text" class="form-label">How much needed</label>
            <input type="text" name="amount" id="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="partnership" class="form-label">Partnership invested</label>
            <input type="text" name="partnership" id="partnership" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
